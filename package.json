{
  "name": "simple-app-ci-cd",
  "version": "1.0.0",
  "repository": "git@github.com:danlopes-arc/simple-app-ci-cd.git",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "start": "yarn workspace server start:prod",
    "build": "yarn workspaces run build && copyfiles apps/client/build/* apps/server/dist/public",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1"
  }
}